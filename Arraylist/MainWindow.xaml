<Window x:Class="Arraylist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arraylist"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="text_box" HorizontalAlignment="Center" Height="100" Margin="0,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="700" FontSize="72"/>
        <Button x:Name="Add" Content="Add" HorizontalAlignment="Left" Height="100" Margin="50,217,0,0" VerticalAlignment="Top" Width="200" FontSize="36" Click="Add_Click"/>
        <Button x:Name="Show_All" Content="Show All" HorizontalAlignment="Left" Height="100" Margin="550,217,0,0" VerticalAlignment="Top" Width="200" FontSize="36" Click="Show_All_Click"/>
        <Button x:Name="Remove" Content="Remove" HorizontalAlignment="Center" Height="100" Margin="0,217,0,0" VerticalAlignment="Top" Width="200" FontSize="36" Click="Remove_Click"/>

    </Grid>
</Window>
